<div style="height:500px">
  <table class="table table-striped table-bordered" id="data_tables">
    <thead>
      <tr>
        <th> First Name </th>
        <th> Second Name </th>
        <th> Email </th>
        <th> Status </th>
      </tr>
    </thead>
    <% if @user %>
    <tbody>
      <tr>
        <td><%= @user.first_name %> </td>
        <td><%= @user.second_name %> </td>
        <td><%= @user.email %> </td>
        <td> <%= @user.status %> </td>
      </tr>
    </tbody>
    <% end %>
  </table>
  <%= link_to "Back", :action => "search" %>
</div>